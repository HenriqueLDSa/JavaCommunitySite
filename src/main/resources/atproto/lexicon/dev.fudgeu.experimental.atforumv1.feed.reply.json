{
  "$type": "com.atproto.lexicon.schema",
  "lexicon": 1,
  "id": "dev.fudgeu.experimental.atforumv1.feed.reply",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "description": "An initial post that starts a discussion",
      "record": {
        "type": "object",
        "required": ["text", "createdAt", "root"],
        "properties": {
          "text": {
            "type": "string",
            "maxLength": 10000
          },
          "createdAt": {
            "type": "string",
            "format": "datetime"
          },
          "root": {
            "type": "string",
            "format": "at-uri"
          }
        }
      }
    }
  }
}