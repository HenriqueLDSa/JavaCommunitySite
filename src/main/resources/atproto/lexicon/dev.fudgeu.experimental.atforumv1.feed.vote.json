{
  "$type": "com.atproto.lexicon.schema",
  "lexicon": 1,
  "id": "dev.fudgeu.experimental.atforumv1.feed.vote",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "description": "An initial post that starts a discussion",
      "record": {
        "type": "object",
        "required": ["root", "createdAt", "value"],
        "properties": {
          "root": {
            "type": "string",
            "format": "at-uri"
          },
          "createdAt": {
            "type": "string",
            "format": "datetime"
          },
          "value": {
            "type": "integer",
            "enum": [-1, 1]
          }
        }
      }
    }
  }
}