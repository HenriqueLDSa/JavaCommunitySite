{
  "$type": "com.atproto.lexicon.schema",
  "lexicon": 1,
  "id": "dev.fudgeu.experimental.atforumv1.forum.category",
  "defs": {
    "main": {
      "type": "record",
      "key": "any",
      "description": "A method of grouping posts into a single 'category'",
      "record": {
        "type": "object",
        "required": ["name", "group", "categoryType"],
        "properties": {
          "name": {
            "type": "string",
            "maxLength": 100,
            "minLength": 1
          },
          "group": {
            "type": "string",
            "format": "at-uri"
          },
          "description": {
            "type": "string",
            "maxLength": 300
          },
          "categoryType": {
            "type": "string",
            "enum": ["discussion", "question"]
          }
        }
      }
    }
  }
}